{
  "name": "simple-static-starter",
  "version": "1.0.0",
  "description": "A simple starter toolchain for frontend projects. Based on Webpack, Typescript and Sass.",
  "scripts": {
    "start": "MODE='development' && webpack-dev-server --open --config webpack.config.js",
    "build": "MODE='production' && webpack --config webpack.config.js",
    "serve-build": "npx http-server ./dist/",
    "clean": "rm -rf dist/*"
  },
  "repository": {
    "type": "git"
  },
  "keywords": [
    "webpack",
    "typescript",
    "javascript",
    "sass",
    "starter",
    "frontend"
  ],
  "author": "Gianfranco Frau",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.12.1"
  },
  "devDependencies": {
    "@babel/core": "^7.18.9",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.18.9",
    "babel-loader": "^8.2.5",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.7.1",
    "eslint": "^8.20.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.6.1",
    "node-sass": "^7.0.1",
    "prettier": "2.7.1",
    "sass-loader": "^13.0.2",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.3",
    "ts-loader": "^9.3.1",
    "tslint": "^6.1.3",
    "tslint-loader": "^3.5.4",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.3"
  }
}
